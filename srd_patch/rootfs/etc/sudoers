# sudoers file.
#
# This file MUST be edited with the 'visudo' command as root.
#
# See the sudoers man page for the details on how to write a sudoers file.
#

# Host alias specification

# User alias specification

# Cmnd alias specification

Cmnd_Alias ADMIN= \
        /bin/cat /root/*.log*, \
        /bin/cat /root/.ssh/id*.pub, \
        /bin/cp /root/dcc-config.xml* /root/dcc-config.xml*, \
        /bin/hostname, \
        /bin/mv /tmp/* /root/otap/*.otap, \
        /bin/mv /tmp/* /etc/ipkg.conf, \
        /bin/ping, \
        /bin/rm -f /root/motes.xml, \
        /bin/stty, \
        /sbin/hwclock, \
        /sbin/passwd dustcli, \
        /usr/bin/clear-motes, \
        /usr/bin/config-redundancy, \
        /usr/bin/config-login, \
        /usr/bin/gw_test, \
        /usr/bin/ha-config, \
        /usr/bin/ifswitch-to-dhcp, \
	/usr/bin/ifswitch-to-static, \
        /usr/bin/ipkg, \
        /usr/bin/led_test, \
        /usr/bin/restore-dcc-conf, \
        /usr/bin/restore-factory-conf, \
        /usr/bin/serial_test, \
        /usr/bin/set-conf-param, \
	/usr/bin/set-dustcli-password, \
        /usr/bin/set-redundancy-keys, \
        /usr/bin/set-serial, \
	/usr/bin/set-system-password, \
        /usr/bin/set-time, \
        /usr/bin/setup-manager, \
        /usr/lib/heartbeat/hb_*, \
	/bin/rm /core.*, \
	/bin/chmod * /core.*, \
	/bin/vi /etc/firewall.conf

Cmnd_Alias BOOT=/sbin/shutdown,/sbin/halt,/sbin/reboot
Cmnd_Alias RESTART=/etc/init.d/dcc, \
	/etc/init.d/firewall, \
	/etc/init.d/stunnel
Cmnd_Alias PPP=/usr/sbin/config-ppp, \
	/bin/vi /etc/ppp/*

# Defaults specification

Defaults 	!syslog
Defaults 	!lecture
Defaults:dust	!authenticate

# Runas alias specification

# User privilege specification
root	ALL = (ALL) ALL
%dust	ALL = ADMIN, BOOT, RESTART, PPP
%ppp	ALL = NOPASSWD: PPP

# Uncomment to allow people in group wheel to run all commands
# %wheel	ALL=(ALL)	ALL

# Same thing without a password
# %wheel	ALL=(ALL)	NOPASSWD: ALL
